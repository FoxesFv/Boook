<Page x:Class="Book.Login"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Book"
      mc:Ignorable="d" 
      d:DesignHeight="350" d:DesignWidth="800"
      Title="Login">

    <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
        <Label Content="Имя пользователя" Height="79" FontSize="48" Foreground="Black"  HorizontalAlignment="Center"/>
        <TextBox x:Name="NameInput"  Width="236" Height="32" FontSize="24" />
        <Label Content="Пароль" Height="79"  FontSize="48" Foreground="Black"  HorizontalAlignment="Center"/>
        <TextBox x:Name="PasswordInput" Width="236" Height="32" FontSize="24"/>
        <Label Height="16" FontSize="24" Foreground="Black"  HorizontalAlignment="Center"/>
        <Button x:Name="button" Height="25"  Content="Вход" FontSize="16" Width="212" Click="button_Click"/>
    </StackPanel>
</Page>
